---
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<div class="flex h-[600px] justify-center border-t">
    <div class="text-5xl p-3 border-r">
        <h2 style="writing-mode: vertical-rl;">{title}</h2>
    </div>
    <div class="w-3/4 px-10">
        <slot />
    </div>
</div>