---
interface Props {
    title: string;
    id: string;
}

const { title, id } = Astro.props;
---

<div class="flex min-h-[600px] justify-center border-t" id={id}>
    <div class="text-6xl p-5 border-r">
        <h2 style="writing-mode: vertical-rl;">{title}</h2>
    </div>
    <div class="w-3/4 px-10">
        <slot />
    </div>
</div>
