---
import {Image} from 'astro:assets';

interface Props {
    title: string,
    icon: any,
    organizer: string,
    message: string,
}

const { title, icon, organizer, message } = Astro.props;
---

<!--<div class="flex justify-center mt-20">-->
    <div class="w-full bg-white bg-opacity-10 p-6 lg:p-10 rounded-3xl my-4">
        <p class="text-4xl">{title}</p>
        <div class="lg:flex">
            <div class="m-4">
                <Image src={icon} alt={organizer} class="rounded-full w-[200px]" />
            </div>
            <div class="w-full">
                <p class="text-2xl">{organizer}</p>
                <p class="text-lg mt-8 w-full">{message}</p>
            </div>
        </div>
    </div>
<!--</div>-->
