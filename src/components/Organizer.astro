---
import {Image} from 'astro:assets';

interface Props {
    title: string,
    icon: any,
    organizer: string,
    message: string,
}

const { title, icon, organizer, message } = Astro.props;
---

<div class="flex justify-center mt-20">
    <div class="bg-white bg-opacity-10 p-10 rounded-3xl">
        <p class="text-4xl">{title}</p>
        <div class="flex">
            <div class="mx-4">
                <Image src={icon} alt={organizer} class="rounded-full w-[200px]" />
            </div>
            <div class="mx-4">
                <p class="text-2xl">{organizer}</p>
                <p class="text-lg mt-8 w-[600px]">{message}</p>
            </div>
        </div>
    </div>
</div>
